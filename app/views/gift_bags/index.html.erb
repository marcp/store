<p id="notice"><%= notice %></p>

<h1>Gift Bags</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Recipient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gift_bags.each do |gift_bag| %>
      <tr>
        <td><%= gift_bag.sender %></td>
        <td><%= gift_bag.recipient %></td>
        <td><%= link_to 'Show', gift_bag %></td>
        <td><%= link_to 'Edit', edit_gift_bag_path(gift_bag) %></td>
        <td><%= link_to 'Destroy', gift_bag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gift Bag', new_gift_bag_path %>
